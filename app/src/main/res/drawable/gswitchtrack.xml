<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="#fa6432"
                android:endColor="#fa6432"
                android:angle="270"/>
            <corners
                android:radius="14dp"/>
            <size
                android:width="28dp"
                android:height="28dp" />
            <stroke
                android:width="1dp"
                android:color="#808080"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="#efeff4"
                android:endColor="#efeff4"
                android:angle="270"/>
            <corners
                android:radius="14dp"/>
            <size
                android:width="38dp"
                android:height="28dp" />
            <stroke
                android:width="1dp"
                android:color="#808080"/>
        </shape>
    </item>
</selector>

